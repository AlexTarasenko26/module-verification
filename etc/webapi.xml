<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/orders/:id/verification" method="GET">
        <service class="Epam\Development\Api\OrderVerificationManagementInterface" method="getVerification"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/orders/setVerification" method="PUT">
        <service class="Epam\Development\Api\OrderVerificationManagementInterface" method="setOrderVerification"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
